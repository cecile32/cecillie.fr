{% set title = site.title ~ ' &middot; ' ~ site.baseline %}
<!doctype html>
<html lang="{{ site.language }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}</title>
    <meta name="title" content="{{ title }}">
    <meta name="description" content="{{ site.description }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ url(page, {canonical: true}) }}">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ site.description }}">
    <meta property="og:image" content="{{ url('apple-touch-icon.png', {canonical: true}) }}">
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ url(page, {canonical: true}) }}">
    <meta property="twitter:title" content="{{ title }}">
    <meta property="twitter:description" content="{{ site.description }}">
    <meta property="twitter:image" content="{{ url('apple-touch-icon.png', {canonical: true}) }}">
    <link rel="apple-touch-icon" href="{{ url('apple-touch-icon.png') }}">
    <link rel="shortcut icon" href="{{ url('favicon.ico') }}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap">
    <link rel="stylesheet" href="{{ url('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ url('css/styles.css') }}">
    <style type="text/css">{% filter minifyCSS %}
        html {
          -webkit-font-smoothing: antialiased;
          -webkit-text-stroke-width: 0;
          -moz-osx-font-smoothing: grayscale;
          -moz-hyphens: auto;
          -webkit-hyphens: auto;
          hyphens: auto;
          box-sizing: border-box;
          background: #fff;
          position: relative;
        }
        body {
          display: flex;
          align-items: center;
          justify-content: center;
          z-index: 0;
          -webkit-animation: backgroundscale 1s ease-out forwards;
          animation: backgroundscale 1s ease-out forwards;
          background: #fff;
        }
    {% endfilter %}</style>
{% include 'partials/alternates.html.twig' %}
</head>
<body>
    <article>
        <div id="logo">
            <div class="logo">
                <img src="{{ url('img/logo.svg') }}" style="max-width: 100px" alt="Logo">
            </div>
        </div>
{% block header %}
        <header>
{% block content %}
            {{ page.content }}
{% endblock content %}
        </header>
{% endblock header %}
{% block footer %}
        <footer>
            <div>
                <h2>
{% for link in site.links %}
                    <a href="{{ link.url }}" target="_blank" rel="noopener">{{ link.name }}</a>
{% endfor %}
                </h2>
            </div>
        </footer>
{% endblock footer %}
    </article>
{% include 'partials/googleanalytics.js.twig' %}
</body>
</html>
